{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ommapin",
  "version": "0.3.0",
  "identifier": "com.filipe.ommapin",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ommapin",
        "decorations": false,
        "width": 620,
        "height": 560,
        "minWidth": 540,
        "minHeight": 420,
        "resizable": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
